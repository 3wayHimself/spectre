<Window x:Class="Spectre.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:spectre="clr-namespace:Spectre"
        Title="MainWindow" Height="517.553" Width="506.877">
    <Grid>
        <ListView HorizontalAlignment="Left" Height="394" VerticalAlignment="Top" Width="499" ItemsSource="{Binding Path=Credentials, RelativeSource={RelativeSource AncestorType={x:Type spectre:MainWindow}}}">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="Name" Width="200" DisplayMemberBinding="{Binding Name, Mode=OneWay}"/>
                    <GridViewColumn Header="Username" Width="250" DisplayMemberBinding="{Binding Username, Mode=OneWay}"/>
                </GridView>
            </ListView.View>
        </ListView>
        <Button Content="Encrypt" HorizontalAlignment="Left" Margin="10,399,0,0" VerticalAlignment="Top" Width="75" Click="Button_Click"/>
        <Button x:Name="BtnDecrypt" Content="Decrypt" HorizontalAlignment="Left" Margin="10,426,0,0" VerticalAlignment="Top" Width="75" Click="BtnDecrypt_Click"/>

    </Grid>
</Window>
